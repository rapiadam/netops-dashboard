SECRET_KEY={{ django_secret_key }}
DEBUG={{ django_debug | string | lower }}
ALLOWED_HOSTS={{ django_allowed_hosts }}
DATABASE_URL={{ django_database_url | default('sqlite:///app/db.sqlite3') }}

{% for service in monitored_services %}
MONITOR_TARGET_{{ loop.index }}_NAME={{ service.name }}
MONITOR_TARGET_{{ loop.index }}_URL={{ service.url }}
MONITOR_TARGET_{{ loop.index }}_INTERVAL={{ service.check_interval }}
{% endfor %}
MONITOR_TARGET_COUNT={{ monitored_services | length }}

PROMETHEUS_URL={{ prometheus_url }}

DJANGO_SUPERUSER_USERNAME={{ django_superuser_username }}
DJANGO_SUPERUSER_EMAIL={{ django_superuser_email }}
DJANGO_SUPERUSER_PASSWORD={{ django_superuser_password }}